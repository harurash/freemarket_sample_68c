%body
  %header.session--header
    = image_tag("/logo.png", id: "session--header--icon")
  .session--main
    %h2#sessoin--title ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .first-field
        .field
          = f.label :"メールアドレス"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email",class:"text-field"
        .field
          = f.label :"パスワード"
          %br/
          = f.password_field :password, autocomplete: "current-password",class:"text-field"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "ログイン" , class:"submit--btn"
      = render "devise/shared/links"

= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post
= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post